# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Java files
[*.java]
indent_size = 4
max_line_length = 120

# Kotlin files (Gradle build scripts)
[*.{kt,kts}]
indent_size = 4
max_line_length = 120

# Gradle files
[*.gradle]
indent_size = 4

# XML files (Maven, Spring config)
[*.xml]
indent_size = 4

# Properties files
[*.properties]
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

# CSS/SCSS
[*.{css,scss,sass}]
indent_size = 2

# HTML
[*.html]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.sh]
indent_size = 2
end_of_line = lf

# Batch files
[*.{bat,cmd}]
end_of_line = crlf

# Makefiles
[{Makefile,makefile}]
indent_style = tab

# Docker files
[{Dockerfile,Dockerfile.*}]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2
